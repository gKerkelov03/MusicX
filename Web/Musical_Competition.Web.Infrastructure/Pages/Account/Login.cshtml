@page
@model LoginPage

@section Links {
	<link href="~/css/LoginAndRegister.css" rel="stylesheet"/>
}

@{
    ViewData["Title"] = "Login";
}

<div class="login-form wow zoomIn" data-wow-delay="0.5s">
    <section class="ftco-section">
        <div class="container">            
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url('https://imgproxy.ra.co/_/quality:100/plain/https://static.ra.co/images/profiles/square/sunelmusician.jpg?dateUpdated=1611780468000');"></div>                        
                        <div class="login-wrap p-4 p-md-5">
                            <div class="d-flex">
                                <div class="w-100">
                                <h3 class="mb-4">Login</h3>
                                </div>
                                <div class="w-100">
                                    <p class="social-media d-flex justify-content-end">
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-instagram"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                        <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                    </p>
                                </div>
                            </div>
                            <form method="post" class="signin-form" asp-route-returnUrl=@Url.Content("~/Home/Admin")>
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Email" class="label">Email</label>
                                    <input asp-for="Input.Email" type="text" class="form-control" placeholder="Email">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Input.Password" class="label" for="password">Password</label>
                                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
                                </div>
                                <div class="form-group d-md-flex">
                                    <div class="w-50 text-left">
                                        <label class="checkbox-wrap checkbox-primary mb-0">
                                            Remember Me
                                            <input type="checkbox" checked>
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                    <div class="w-50 text-md-right">
                                        <a href="#">Forgot Password</a>
                                    </div>                                   
                                </div>
                            </form>
                            <p class="text-center">Not a member? <a data-toggle="tab" asp-page="/Account/Register">Register</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="/PartialViews/_ValidationScriptsPartial.cshtml" />          
}